{
  "name": "express-js-base-project",
  "version": "1.0.0",
  "description": "A boilerplate to start new ExpressJS projects",
  "main": "index.js",
  "repository": "https://github.com/lbertoncello/expressjs-base-project",
  "author": "lbertoncello",
  "license": "MIT",
  "private": false,
  "type": "module",
  "scripts": {
    "start": "node src/main/server.js",
    "dev": "nodemon src/main/server.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --passWithNoTests --silent --noStackTrace --runInBand --detectOpenHandles --forceExit",
    "test:verbose": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --passWithNoTests --runInBand --detectOpenHandles --forceExit",
    "test:unit": "cross-env NODE_OPTIONS=--experimental-vm-modules yarn test --watch -c jest-unit-config.js",
    "test:unit:verbose": "cross-env NODE_OPTIONS=--experimental-vm-modules yarn test:verbose -c jest-unit-config.js",
    "test:integration": "cross-env NODE_OPTIONS=--experimental-vm-modules yarn test --watch -c jest-integration-config.js",
    "test:integration:verbose": "cross-env NODE_OPTIONS=--experimental-vm-modules yarn test:verbose -c jest-integration-config.js",
    "test:staged": "cross-env NODE_OPTIONS=--experimental-vm-modules yarn test --findRelatedTests",
    "test:ci": "cross-env NODE_OPTIONS=--experimental-vm-modules yarn test --coverage --detectOpenHandles --forceExit",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs --fix",
    "format": "prettier --write src/",
    "prepare": "husky install"
  },
  "dependencies": {
    "app-root-path": "^3.1.0",
    "bcrypt": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.1.5",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "mongoose": "^7.1.0",
    "morgan": "^1.10.0",
    "validator": "^13.9.0",
    "winston": "^3.8.2",
    "winston-mongodb": "^5.1.1",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@eslint/create-config": "^0.4.3",
    "@shelf/jest-mongodb": "^4.1.7",
    "@types/jest": "^29.5.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "git-commit-msg-linter": "^5.0.4",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "markdown-notes-tree": "^1.12.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3"
  }
}
